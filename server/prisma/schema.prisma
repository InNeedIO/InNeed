datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime @default(now())
  firstName String?
  id        String   @id @default(cuid())
  lastName  String?
  password  String
  roles     String[]
  updatedAt DateTime @updatedAt
  username  String   @unique
}

model Need {
  createdAt   DateTime         @default(now())
  description String
  id          String           @id @default(cuid())
  isOffer     Boolean
  needType    EnumNeedNeedType
  title       String
  updatedAt   DateTime         @updatedAt
}

enum EnumNeedNeedType {
  Home
  Work
  Transport
}