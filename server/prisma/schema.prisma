datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  description      String?
  email            String   @unique
  first_name       String
  id               String   @id @default(cuid())
  last_name        String?
  location         String
  password         String
  roles            String[]
  telephone_number String
  username         String   @unique
  user_type        String
}

model Need {
  createdAt   DateTime         @default(now())
  description String
  id          String           @id @default(cuid())
  isOffer     Boolean
  needType    EnumNeedNeedType
  title       String
  updatedAt   DateTime         @updatedAt
}

model JobApplicant {
  id              String @id @default(cuid())
  job_offering_id Int
  user_id         Int
}

model JobOffering {
  author_id      Int
  city           String
  description    String
  id             String  @id @default(cuid())
  max_salary     Int?
  min_salary     Int?
  position_level String?
  title          String
  working_mode   String
}

model HousingOffering {
  address      String
  author_id    Int
  city         String
  description  String
  id           String @id @default(cuid())
  price        Int
  rooms_number Int
  size         Float
  title        String
}

model HousingApplicant {
  house_offeringI_id Int
  id                 String @id @default(cuid())
  user_id            Int
}

enum EnumNeedNeedType {
  Home
  Work
  Transport
}